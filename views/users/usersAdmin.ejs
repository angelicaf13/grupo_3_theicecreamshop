<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>
    <main class="main-users-list">
        <h2 class="h2-users">Gesti√≥n de los usuarios</h2>
          <div class="container-main-users-list">
              <% for( let user of listausuarios ) { %>
            <article class="user-container">
                <img class="imagen-user" src="/img/users/<%= user.profileImage %>">
                <p > <%= user.first_name %> <%= user.last_name %></p>
                <h2> <%= user.category.name %> </h2>
                <form  action="/admin?_method=PUT" method="POST">
                    <input type="text" name="tipo" id="tipo" value="<%= user.id_user %>"> 
                    <input type="text" name="rol" id="rol" value="<%= user.id_category %>"> 
                    <button class="user-button" type="submit">Cambiar rol</button>
                </form>
            </article>
                <% } %>
        </div>
      </main>
      <%- include('../partials/footer') %>
  </body>

</html>