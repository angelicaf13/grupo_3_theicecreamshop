<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/header') %>
    <main class="main-login">
      <div class="glass-container">
        <section class="glass-login">
          <h3>Acceder</h3>
          <p>¿Aún no tienes cuenta?<a href="/register"> Regístrate aquí</a></p>
          <ul class="errores"></ul>
          <form method="POST" action="/login" class="login-form">
            <div class="form-control">
              <label for="email">Correo electrónico</label>
              <input type="email" name="email" id="email" />
              <% if (locals.errores && errores.email) { %>
                <p class="invalid">
                  <%= errores.email.msg %>
                </p>
              <% } %>
              <% if (locals.errors && errors.email) { %>
                <p class="invalid">
                  <%= errors.email.msg %>
                </p>
              <% } %>
            </div>
            <div class="form-control">
              <label for="pass">Contraseña</label>
              <input type="password" name="pass" id="pass" />
              <% if (locals.errores && errores.pass) { %>
                <p class="invalid">
                  <%= errores.pass.msg %>
                </p>
              <% } %>
              <% if (locals.errors && errors.pass) { %>
                <p class="invalid">
                  <%= errors.pass.msg %>
                </p>
              <% } %>
            </div>
            <div class="form-control">
              <a href="">¿Olvidaste tu constraseña?</a>
            </div>
            <div class="form-control">
              <label>Recordarme <input type="checkbox" name="remember_user" /></label>
            </div>
            <button type="submit" class="login-button">INGRESAR</button>
          </form>
        </section>
        <img src="/img/ice-cream-cone.svg" class="ice-cream-cone-img-1" />
        <img src="/img/ice-cream-cone.svg" class="ice-cream-cone-img-2" />
      </div>
    </main>
    <%- include('../partials/footer') %>
    <script src="/js/loginValidation.js"></script>
  </body>
</html>
